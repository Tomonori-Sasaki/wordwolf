<!DOCTYPE html>
<html>
  <head>
    <title>Wordwolf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  </head>

  <body>
    <header>

      <div class="header-logo">
        <%= link_to("Word Wolf", "/") %>
      </div>
      <ul class="header-menus">
        <li>
          <%= link_to("NewGame", users_destroy_all_path, :method => :delete, :data => {:confirm => '全てのプレイヤーを消去して新しいゲームを開始しますが、よろしいですか？'}) %>
        </li>
        <li>
          <%= link_to("Continue", users_path) %>
        </li>
        <li>
          <%= link_to("Record", users_record_path) %>
        </li>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>

    <footer>
      <ul>
        <li>
          <%= link_to("Created by Tomonori Sasaki", 'https://www.facebook.com/profile.php?id=100005307370876') %>
        </li>
      </ul>
    </footer>

  </body>
</html>
