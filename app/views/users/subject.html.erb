<div class="main">
  <div class="container">
    <div class="pokemon">
        <div class="character-icon-for-not-seen">
          <%= link_to image_tag("#{@user.image}"), "#" %>
          <p><%= @user.name %></p>
        </div>
    </div>
    <div class="subject">
      <h2>お題「<%= @user.word %>」</h2>
    </div>
    <div class="btn">
      <%= link_to '覚えた', users_not_seen_path(@player_num + 2), class:"square_btn" %>
    </div>
  </div>
</div>
